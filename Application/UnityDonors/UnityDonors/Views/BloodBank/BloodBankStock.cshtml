@model IEnumerable<UnityDonors.Models.BloodBankStockMV>

@{
    ViewBag.Title = "Stock";
}

<div class="col-md-6">
    <div class="contact-form-block">

        <h2 class="contact-title">BloodBank Stock</h2>

        <p>
            @Html.ActionLink("Add Donor", "AddNewDonorByBloodBank", "Accounts", null, new { @class = "btn btn-theme" })
            @Html.ActionLink("New Campaign", "NewCampaign", null, new { @class = "btn btn-theme" })
            @Html.ActionLink("Campaign History", "CampaignHistory", null, new { @class = "btn btn-theme" })
        </p>
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BloodGroup)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BloodGroup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

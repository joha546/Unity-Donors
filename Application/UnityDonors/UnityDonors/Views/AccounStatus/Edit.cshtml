@model UnityDonors.Models.AccountStatusMV

@{
    ViewBag.Title = "Account Status";
}

<div class="col-md-6">
    <div class="contact-form-block">

        <h2 class="contact-title">Edit Status.</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.AccountStatusID)
            <div class="form-group">
                Edit Status
                @Html.EditorFor(model => model.AccountStatus, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AccountStatus, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">

                <input type="submit" style="float:right;" value="Update" class="btn btn-theme-invert" />
                @Html.ActionLink("Back to List", "AllAccountStatus", null, new { @class = "btn btn-theme-invert" })

            </div>
        }

    </div>
</div>
